<!DOCTYPE html>
<html>

<head>
  <title>IllustTube</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= favicon_link_tag 'favicon.ico' %>
  <meta name="viewport" content="width=device-width,initial-scale=1"> <!-- 画面サイズに表示を調整 -->
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome-animation/0.2.1/font-awesome-animation.css"
    type="text/css" media="all" />
  <%= yield :css %>
</head>

<body>
  <% if not current_page?(root_path) || current_page?(new_user_registration_path) %>
  <header id="grid-header">
    <div class="shadow-sm p-3 mb-3 bg-white rounded">
      <nav class="navbar navbar-expand-lg">
        <%= link_to posts_path do %>
        <%= image_tag("/illusttube.png", class:"title_image") %>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% if user_signed_in? %>
            <!-- ログインしている場合 -->
            <%# PC & タブレット用 %>
            <li>
              <%= link_to user_path(current_user.id), class: 'nav-link nav-item underscore', method: :get do %>
              <i class="fa fa-user-plus"></i> マイページ
              <% end %>
            </li>
            <li>
              <%= link_to users_path, class: 'nav-link nav-item underscore', method: :get do %>
              <i class="fas fa-users"></i> ユーザー一覧
              <% end %>
            </li>
            <li>
              <%= link_to new_post_path, class: 'nav-link nav-item underscore', method: :get do %>
              <i class="fas fa-clipboard"></i> 新規投稿
              <% end %>
            </li>

            <li>
              <%= link_to youtube_search_path, class: 'nav-link nav-item underscore', method: :get do %>
              <i class="fab fa-youtube faa-flash animated"></i> 検索して新規投稿
              <% end %>
            </li>

            <div class="spview">
              <%# タブレット用 %>
              <hr>



              <% if current_user.image.blank? %>
              <%= image_tag '/default.png', class: "icon_image" %>
              <% else %>
              <img src=<%= current_user.image %> class="icon_image">
              <% end %>
              <li class="underscore">
                <%= link_to("#{current_user.name}", user_path(current_user.id), class: '') %>
              </li>

              <li>
                <%= link_to destroy_user_session_path, class: 'btn btn-secondary margin_up', method: :delete do %>
                <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>

                <center>
                  <hr>
                  <%= render "shared/posts_search" %>
                </center>
                <hr>
              <li>
                <%= link_to inquiry_index_path, class: 'nav-link nav-item underscore', method: :get do %>
                <i class="fas fa-envelope"></i> お問い合わせ
                <% end %>
              </li>

              <hr>
              <%# <h5>カテゴリーから探す</h5> %>
              <% @categories.each do |tag| %>
              <%= link_to posts_path(tag_name: tag.name), class: "badge badge-pill badge-primary" do %>
              <i class="fas fa-tag"></i><%= tag.name %>(<%= tag.taggings_count %>)
              <% end %>
              <% end %>

              <hr>
              <% @occupations.each do |tag| %>
              <%= link_to posts_path(tag_name: tag.name), class: "badge badge-pill badge-success" do %>
              <i class="fas fa-tags"></i><%= tag.name %>(<%= tag.taggings_count %>)
              <% end %>
              <% end %>

              <hr>
              <% @targets.each do |tag| %>
              <%= link_to posts_path(tag_name: tag.name), class: "badge badge-pill badge-danger" do %>
              <i class="fas fa-user-tag"></i><%= tag.name %>(<%= tag.taggings_count %>)
              <% end %>
              <% end %>

              <footer>
                &copy;Teppei Mimachi 2021
              </footer>
            </div>
            <% else %>
            <!-- ログアウトしている場合 -->
            <li>
              <%= link_to root_path, class: 'nav-link nav-item underscore', method: :get do %>
              <i class="fas fa-sign-in-alt"></i> ユーザー登録
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path, class: 'nav-link nav-item underscore', method: :get do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
              <% end %>
            </li>
            <div class="spview">
              <li class="nav-item underscore">
                <%= link_to inquiry_index_path, class: 'nav-link', method: :get do %>
                <i class="fas fa-envelope"></i> お問い合わせ
                <% end %>
              </li>
            </div>
            <% end %>
          </ul>

          <div class="fixed pcview">
            <%# 右に表示 %>
            <li class="nav-item underscore">
              <%= link_to inquiry_index_path, class: 'nav-link', method: :get do %>
              <i class="fas fa-envelope"></i> お問い合わせ
              <% end %>
            </li>

          </div>
        </div>
      </nav>
    </div>
  </header>
  <% end %>

  <aside class="px-3">
    <% if user_signed_in? %>
    <div class="fixed pcview">
      <%# PC用 %>
      <center>
        ようこそ
        <% if current_user.image.blank? %>
        <%= image_tag '/default.png', class: "icon_image" %>
        <% else %>
        <img src=<%= current_user.image %> class="icon_image">
        <% end %>
        <li class="underscore">
          <%= link_to("#{current_user.name}", user_path(current_user.id), class: '') %>
        </li>
        さん
        <div>
          <%= link_to destroy_user_session_path, class: 'btn btn-outline-dark margin_up', method: :delete do %>
          <i class="fas fa-sign-out-alt"></i>ログアウト
          <% end %>
        </div>
      </center>

      <hr>
      <center>
        <%# PC用 %>
        <%= form_tag(search_path,:method => 'get') do %>
        <%= text_field_tag :search, '', class: '', placeholder: "投稿記事を探す" %>
        <%= button_tag :name => nil, :class =>"btn-outline-info badge-light" do %>
        <i class="fa fa-search"></i>検索
        <% end %>
        <% end %>
      </center>

      <hr>
      <% @categories.each do |tag| %>
      <%= link_to posts_path(tag_name: tag.name), class: "badge badge-pill badge-primary" do %>
      <i class="fas fa-tag"></i><%= tag.name %>(<%= tag.taggings_count %>)
      <% end %>
      <% end %>
      <hr>
      <% @occupations.each do |tag| %>
      <%= link_to posts_path(tag_name: tag.name), class: "badge badge-pill badge-success" do %>
      <i class="fas fa-tags"></i><%= tag.name %>(<%= tag.taggings_count %>)
      <% end %>
      <% end %>

      <hr>
      <% @targets.each do |tag| %>
      <%= link_to posts_path(tag_name: tag.name), class: "badge badge-pill badge-danger" do %>
      <i class="fas fa-user-tag"></i><%= tag.name %>(<%= tag.taggings_count %>)
      <% end %>
      <% end %>
      <% end %>



      <% if user_signed_in? %>
      <footer>
        &copy;Teppei Mimachi 2021
      </footer>
      <% end %>
    </div>
  </aside>

  <main class="shadow-none p-3 mb-5 bg-white rounded">
    <%= render 'layouts/alert' %>
    <%= yield %>
    <div id="page_top"><a href="#"></a></div>
  </main>

  <%# ローディングの表示 %>
  <%# <div class="loader-wrap">
    <div class="loader">Loading...</div>
  </div> %>

  <script>
    $('.btn_alert').click(function () {
      alert('テストユーザーの為、この機能をご利用できません。');
    });
  </script>
</body>

</html>