<h4>コメント一覧</h4>
<% @comments.each do |c| %>
<div>
  <a href="/users/<%= @post.user.id %>"><%= c.user.email %></a>
  <%= c.content %>
  <% if user_signed_in? && current_user.id == c.user_id %>
  <%= link_to("編集", "/comments/#{c.id}/edit") %>
