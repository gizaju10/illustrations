<%= form_for @post do |f| %>
<%# <%= f.label :content %>
<% @post.errors.full_messages_for(:title).each do |message| %>
<div class="badge badge-warning">
  <%= message %>
</div>
<% end %>
<diV>
  <%= f.text_field :title, placeholder: "タイトル" %>
</div>
<%# <hr> %>
<%= f.label :url, "紹介したいYouTubeのURL：", class: "font-weight-bold field" %>
<%# <div class="field">紹介したいYouTubeのURL：</div> %>
  <% @post.errors.full_messages_for(:url).each do |message| %>
  <div class="badge badge-warning">
    <%= message %>
  </div>
  <% end %>
  <diV>
    <%= f.text_field :url, placeholder: "https://www.youtube.com/watch?v=", class: "url_text" %>
  </div>
 

