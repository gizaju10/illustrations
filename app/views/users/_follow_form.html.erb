<% unless current_user?(@user) %>
<div id="follow_form">
  <% if current_user.following?(@user) %>
  <%= render 'unfollow' %>
  <% else %>
  <%= render 'follow' %>
  <% end %>
</div>

<div id="stats">
  <% if current_user.following?(@user) %>
  <%= render 'stats' %>
  <% else %>
  <%= render 'stats' %>
  <% end %>
</div>
<% end %>