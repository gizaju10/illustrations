<% @youtube_data.items.each do |item| %>
  <% snippet = item.snippet %>
  <p><%= snippet.title %></p>
  <p><%= snippet.published_at %><%= snippet.channel_title %></p>
  <div><iframe width="560" height="315" src="https://www.youtube.com/embed/<%= item.id.video_id %>?rel=0"" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></div>

<a onclick="this.style.backgroundColor='#990000'">Paint it red</a>

<dl class="p-faq">
  <dt class="p-faq-title">投稿する</dt>

  <dd class="p-faq-description">
  <%= render "posts/post" %>
  </dd>
  <p>
<% end %>
<%= link_to("YouTubeで確認する", "https://www.youtube.com/", class: 'navbar-brand underscore') %>

<script>
$('.p-faq-title').on('click', function(){
	$(this).toggleClass('active');
	$(this).next().slideToggle();
});

