<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%- if controller_name != 'sessions' %>
    
      <%# <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn btn-outline-info margin_up', data: {"turbolinks"=>false} do %>
      <i class="fab fa-google"></i> Googleアカウントから登録
      <% end %>
      <br />
    <%- elsif devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn btn-outline-info margin_up' do %>
            <i class="fab fa-google"></i> Googleアカウントからログインする
      <% end %>
      <br />
    <% end %>
  <% end %>
