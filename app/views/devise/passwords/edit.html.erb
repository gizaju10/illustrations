<h4><i class="fas fa-unlock-alt"></i> パスワードを変更してください</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<%= f.hidden_field :reset_password_token %>

<div class="field">
  <div><%= f.label :password, "新しいパスワード：" %></div>
  <% if @minimum_password_length %>
  <% end %>
  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "パスワード ※#{@minimum_password_length}文字以上", class: 'password_text' %>
</div>

<div class="field">
  <div><%= f.label :password_confirmation, "新しいパスワードを確認：" %></div>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード ※再入力", class: 'normal_text' %>
</div>

<div class="actions margin_top_bttom">
  <%= f.submit "変更する", class: "btn btn-outline-primary" %>
</div>
<% end %>

<%= render "devise/shared/links" %>