<h4><i class="fas fa-unlock-alt"></i> パスワードをお忘れですか？</h4>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="field">

  <div><%= f.label :email, "ご登録のメールアドレスを入力してください" %></div>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: 'password_text' %>
</div>

<div class="actions margin_top_bttom">
  <%= f.submit "送信する", class: "btn btn-outline-primary" %>
</div>
<% end %>

<%= render "devise/shared/links" %>