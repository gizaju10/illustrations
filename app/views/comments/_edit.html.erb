<% if @comment.user == current_user || current_user.id == 2 %>
<%= form_tag("/posts/#{@comment.post_id}/comments/#{@comment.id}", method: :patch, remote: true) do %>
<%= render "comments/comment" %>
<%= button_tag :type => "submit", :class =>"btn waves-effect waves-light btn-primary" do %>
更新する
<% end %>
<%= link_to :back, class: "btn waves-effect waves-light btn-light" do %>
戻る
<% end %>
<% end %>
<% else %>
権限がありません。
<% end %>